{{!--

registration handelbars

--}}

<form id="registration-form" action="/register" method="POST">
<div>
    <label for="firstNameInput">First Name:</label>
    <input type="text" placeholder="First Name" id="firstNameInput" name="firstName" required>
</div>
<br>
<div>
    <label for="lastNameInput">Last Name:</label>
    <input type="text" placeholder="Last Name" id="lastNameInput" name="lastName" required>
</div>
<br>
<div>
    <label for="emailAddressInput">Email Address:</label>
    <input type="email" placeholder="Email" id="emailAddressInput" name="emailAddress" required>
</div>
<br>
<div>
    <label for="passwordInput">Password:</label>
    <input type="password" placeholder="Password" id="passwordInput" name="password" required>
</div>
<br>
<div>
    <label for="confirmPasswordInput">Confirm Password:</label>
    <input type="password" placeholder="Confirm Password" id="confirmPasswordInput" name="confirmPassword" required>
</div>
<br>
<div>
    <label for="roleInput">Role:</label>
    <select id="roleInput" name="role" required>
        <option value="" disabled selected>Select Role</option>
        <option value="admin">Admin</option>
        <option value="user">User</option>
    </select>
</div>
<br>
<button type="submit">Register</button>
</form>
<p>Already have an account? <a href="/login">Click here to log in</a></p>

{{#if error}}
<p id="pError">{{error}}</p>
{{/if}}