<article class="new-TG">
  <h2>Add a Tip or Guide</h2>
  <form action="/TipsGuides/index" method="POST" class="new-post-form">
    <label>
      Author:
      <input type="text" name="author" placeholder="Author" value="{{TG.author}}" class="full-width-input">
    </label>
<br>
<br>
    <label>
      Title:
      <input type="text" name="title" placeholder="Title" value="{{TG.title}}" class="full-width-input">
    </label>
<br>
<br>
    <label>
      Text:
      <input type="text" name="text" placeholder="Text" value="{{TG.text}}" class="full-width-input">
    </label>
<br>
<br>

   
    <br>
    <button type="submit">Add New Tip or Guide</button>
    <button type="reset">Clear Form</button>
    {{!-- <input type="hidden" name='_method' value="PUT" /> --}}
  </form>

  
  {{#if hasErrors}}
  <ul class="error-list">
    {{#each errors}}
    <li>
      {{this}}
    </li>
    {{/each}}
  </ul>
  {{/if}}

</article>

<br>
<br>
<br>

<section>
  <h2>Tips & Guides</h2>
  {{#each TipsGuides}}
  <article class="TG">
    <h2><a href="/TipsGuides/{{_id}}">{{title}}</a></h2>
    <p>{{body}}</p>
  </article>
  {{/each}}
</section>


